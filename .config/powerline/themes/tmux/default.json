{
	"segments": {
		"right": [
			{
				"function": "powerline.segments.common.sys.uptime",
				"priority": 50,
				"args": {
					"shorten_len": 1
				}
			},
			{
				"function": "powerline.segments.common.time.date",
				"priority": 40
			},
			{
				"function": "powerline.segments.common.time.date",
				"name": "time",
				"priority": 40,
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
			{
				"function": "powerline.segments.common.net.hostname",
				"args": {
					"only_if_ssh": true
				}
			},
			{
				"function": "powerline.segments.common.net.external_ip",
				"args": {
					"interval": 86400
				}
			}
		]
	}
}
